<header class="border-bottom border-dark mb-5">
  <nav class="navbar">
    <div class="container-fluid">
      <div class="col-lg-4">
      <%= link_to "LOGO", root_path, class: "btn btn-outline-dark btn-lg text-left px-5" %>
      </div>
      <% if customer_signed_in? %>
        <div class="text-center">
          <%= "ようこそ、"+current_customer.name_sei+"さん！" %>
        </div>
      <% end %>
      <div class="col-lg-6 float-end text-right">
        <% if admin_signed_in? %>

            <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-dark mx-1" %>

            <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-dark mx-1" %>

            <%= link_to "注文履歴一覧", admin_path, class: "btn btn-outline-dark mx-1" %>

            <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-dark mx-1" %>

            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: "btn btn-outline-dark mx-1" %>

        <% elsif customer_signed_in? %>

            <%= link_to "マイページ", customers_path, class: "btn btn-outline-dark mx-2" %>

            <%= link_to "商品一覧", items_path, class: "btn btn-outline-dark mx-2" %>

            <%= link_to "カート", cart_items_path, class: "btn btn-outline-dark mx-2" %>

            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: "btn btn-outline-dark mx-2" %>

        <% else %>

            <%= link_to "About", about_path, class: "btn btn-outline-dark mx-2" %>

            <%= link_to "商品一覧", items_path, class: "btn btn-outline-dark mx-2" %>

            <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-dark mx-2" %>

            <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-dark mx-2" %>

        <% end %>

        <br>
        <br>
        <div class="navbar navbar-fixed-top">
          <div class="input-group  float-end text-right search_box">
            <form class="form-inline ml-auto">
              <input type="text" class="form-control10 ml-auto " aria-describedby="basic-addon" >
                <button class="btn" type="button" id="button-addon"><i class="fa-solid fa-magnifying-glass text-primary"></i></button>
              </input>
            </form>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>