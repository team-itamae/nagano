<div class="container col-lg-8">
  <h3><div class="d-inline mt-5 px-4 bg-light text-dark">
    注文情報入力
  </div></h3>
</div>
<br>
<div class="container col-lg-10">
  <%= form_with model: @order,url: orders_confirm_path, method: :post, local: true do |f| %>
  <h5>
    <div class="font-weight-bold">
      支払方法
    </div>
    <div class="row-lg-12 ml-5">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      <br>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>
    <br>
    <div class="font-weight-bold">
      お届け先
    </div>
    <div class="row-lg-12 ml-5">
      <%= f.radio_button :select_address, 0, checked: true %>
      <%= f.label :select_address, "ご自身の住所" %>
      <div class="ml-4 mb-2">
        <%= "〒"+current_customer.post_code+" "+current_customer.address %>
        <br>
        <%= current_customer.name_sei+current_customer.name_mei %>
      </div>
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :select_address, "登録済住所の選択" %>
      <div class="ml-4 mb-2">
        <%=  f.select :address_id, options_from_collection_for_select(@addresses, :id, :address_display) %>
      </div>
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :address, "新しいお届け先" %>
      <table class="table table-borderless ml-3 mb-2">
  </h5>
        <tbody>
          <tr>
            <td style="width: 20%">
              <h6>
              <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
            </td>
            <td>
              <%= f.text_field :post_code, autocomplete: "postal_code" %>
            <td>
          </tr>
          <tr>
            <td>
              <%= f.label :address, "住所" %>
            </td>
            <td>
              <%= f.text_field :address, autocomplete: "street-address",:size=>"50" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :name, "宛名" %>
            </td>
            <td>
              <%= f.text_field :name, autocomplete: "name" %>
              </h6>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="form-group d-grid gap-1 col-2 mx-auto">
      <%= f.submit '確認画面へ進む', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>

