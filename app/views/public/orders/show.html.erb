<div class = "container">
  <h3><div class="d-inline mt-5 px-3 bg-light text-dark">注文履歴詳細</div></h3>

  　<div class = "row">
   　　 <div class="col-7">
 　　　　　　<p class="font-weight-bold">注文情報</p>
              <table class="table table-bordered">
                <tr>
                    <td class="secondary bg-light">注文日</td>
                    <td scope="col" style="width: 80%"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
                <tr>
                    <td class="secondary bg-light">配送先</td>
                    <td scope="col" style="width: 80%">
                        <p><%#= @order.adress %></p>
                        <p><%#= @order.name %></p>
                    </td>
                </tr>
                <tr>
                    <td class="secondary bg-light">支払方法</td>
                    <td scope="col" style="width: 80%"><%#= @order.payment_method %></td>
                </tr>
                <tr>
                    <td class="secondary bg-light">ステータス</td>
                    <td scope="col" style="width: 80%"><%#= @order.status %></td>
                </tr>
              </table>
  　　   </div>

       <div class="col-3">
     　　　　<p class="font-weight-bold">請求情報</p>
              <table class="table table-bordered border-secondary">
                <tr>
                    <td class="secondary bg-light">商品合計</td>
                    <td scope="col" style="width: 60%"><%#= @total %></td>
                </tr>
                <tr>
                    <td class="secondary bg-light">配送料</td>
                    <td scope="col" style="width: 60%"><%#= @order.shipping_price.to_s(:delimited) %></td>
                </tr>
                <tr>
                    <th class="secondary bg-light">ご請求額</th>
                    <td scope="col" style="width: 60%"><%#= @order.price_all.to_s(:delimited) %></td>
                </tr>
              </table>
        </div>
　　</div>

    　 <div class = "row">
    　     <div class="col-7">
    　        <p class="font-weight-bold">注文内容</p>
            <table class="table table-bordered ">
             <thead class="thead">
              <tr>
                <td class="secondary bg-light">商品</td>
                <td class="secondary bg-light">単価（税込）</th>
                <td class="secondary bg-light">個数</th>
                <td class="secondary bg-light">小計</th>
            　</tr>
             </thead>
              <tbody>
                <%# @order.each do |order| %>
                <%# @total += cart_item.subtotal.to_s(:delimited) %>
                  <tr>
                    <td scope="col" style="width: 70%"><%#= order.item.name %></td>
                    <td scope="col" style="width: 60%"><%#= order.item.add_tax_price.to_s(:delimited) %></td>
                    <td scope="col" style="width: 60%"><%#= order.order_detail.quantity %></td>
                    <td scope="col" style="width: 60%"><%#= order.cart_item.subtotal.to_s(:delimited) %></td>
                  </tr>
                <%# end %>
              </tbody>
            </table>
          </div>
       </div>

</div>