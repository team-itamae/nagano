<div class = "container">
  <h3><div class="d-inline mt-5 px-3 bg-light text-dark">注文情報確認</div></h3>
    <div class = "row mb-3">
      <div class = "col">

        <table class = "table table-bordered">
          <thead class = "table-active">
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>

          <tbody>
            <%# total = 0 %>
            <% @cart_items.each do |cart_item| %>
               <tr>
                <td class = "align-middle">
                  <% if cart_item.item.image.attached? %>
                    <%= image_tag cart_item.item.image, size:"150x100" %>
                  <% else %>
                    <%= image_tag "no_image.jpeg" %>
                  <% end %>
                  <%= cart_item.item.name %>
                  </td>
                <td class = "align-middle text-right"><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
                <td class = "align-middle text-right"><%= cart_item.quantity %></td>
                <td class = "align-middle text-right"><%= cart_item.subtotal.to_s(:delimited) %></td>
              </tr>
            <% end %>
          </tbody>

        </table>
      </div>

           <div class="col-3">
                  <table class="table table-bordered border-secondary">
                    <% @shipping_price = 800 %>
                    <tr>
                        <td class="secondary bg-light">配送料</td>
                        <td scope="col" style="width: 60%"><%=  @shipping_price %></td>
                    </tr>
                    <tr>
                       <% @total = @cart_items.inject(0) { |sum, item| sum + item.subtotal } %>
                        <td class="secondary bg-light">商品合計</td>
                        <td scope="col" style="width: 60%"><%= @total.to_s(:delimited) %></td>
                    </tr>
                    <tr>
                        <% @price_all = @shipping_price +  @total %>
                        <th class="secondary bg-light">請求金額</th>
                        <td scope="col" style="width: 60%"><%= @price_all.to_s(:delimited) %></td>
                    </tr>
                  </table>
            </div>
    </div>

      <div class = "row">
        　<h5><p class="font-weight-bold">支払方法</p></h5>
        　       <td class="col-10">
                 <br><%= @order.payment_method_i18n %>
                </td>
      </div>
<br>
      <div class = "row">
        　<h5><p class="font-weight-bold">お届け先</p></h5>
                <td class="col-10">
                  <br>〒<%= @order.post_code %>
                        <%= @order.address %><br>
                        <%= @order.name %>
                </td>
      </div>


    　 　 <div class = "row justify-content-center">
          <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
            <%= f.hidden_field :shipping_price, :value => 800 %>
            <%= f.hidden_field :price_all, :value => 800 + @total %>
            <%= f.hidden_field :payment_method, :value => @order.payment_method %>
            <%= f.hidden_field :name, :value => @order.name %>
            <%= f.hidden_field :address, :value => @order.address %>
            <%= f.hidden_field :post_code, :value => @order.post_code %>
            <%= f.hidden_field :status, :value => @order.status %>
            <%= f.submit "注文を確定する", class: "btn btn-success" %>
        <% end %>
         </div>

</div>
