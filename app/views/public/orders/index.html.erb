<div class='container'>
  <h3><div class='d-inline mt-5 px-3 bg-light text-dark'>注文履歴一覧</div></h3>
    <div class='row'>

      <div class='col-md-10'>
        <table class='table table-bordered border-dark'>
          <thead class='thead-light'>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                  <%= "〒" + order.post_code %><br>
                  <%= order.address %><br>
                  <%= order.name %><br>
              </td>
              <td>
                  <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %>
                  <% end %>
              </td>
              <td><%= order.price_all.to_s(:delimited) + "円" %></td>
              <td><%= order.status %></td>
              <td><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary" %></td>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
</div>
