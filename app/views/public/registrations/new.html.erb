<div class="container col-lg-7">
  <h3><div class="d-inline mt-5 px-3 bg-light text-dark">新規会員登録</div></h3>
</div>

<br>

<div class="container col-lg-8 pt-5">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table class="table table-borderless">
    <tr>
      <td>
        <h6>名前</h6>
      </td>
      <td>
        <div class="field">
        <%= f.label :name_sei, "(姓)" %>
        <%= f.text_field :name_sei, autofocus: true, autocomplete: "family-name" %>
        </div>
      </td>
      <td>
        <div class="field">
        <%= f.label :name_mei, "(名)" %>
        <%= f.text_field :name_mei, autocomplete: "given-name" %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <h6>フリガナ</h6>
      </td>
      <td>
        <div class="field">
        <%= f.label :kana_sei, "(セイ)" %>
        <%= f.text_field :kana_sei, autocomplete: "family-name" %>
        </div>
      </td>
      </div>
      <td>
        <div class="field">
        <%= f.label :name_mei, "(メイ)" %>
        <%= f.text_field :kana_mei, autocomplete: "given-name" %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
    <%= f.label :email, "メールアドレス" %>
    </td>
    <td>
      <div class="field">
    <%= f.email_field :email, autocomplete: "email" %>
    </div>
    </td>
  </tr>

  <tr>

    <td>
  <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
    </td>
    <td>
      <div class="field">
    <%= f.text_field :post_code, autocomplete: "postal_code" %>
    </div>
    </td>

  </tr>

  <tr>

    <td>
  <%= f.label :address, "住所" %>
    </td>
    <td colspan="2">
      <div class="field">
    <%= f.text_field :address, autocomplete: "street-address",:size=>"75" %>
    </div>
    </td>

  </tr>

  <tr>
    <td>
  <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    </td>
    <td>
      <div class="field">
    <%= f.text_field :phone_number, autocomplete: "tel-local" %>
    </div>
    </td>
  </tr>

  <tr>
    <td>
    <%= f.label :password, "パスワード(6文字以上)" %>
    </td>
    <td>
      <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    </td>
  </tr>

  <tr>
    <td>
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    </td>
    <td>
      <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    </td>

  </tr>

  </table>

  <div class="actions d-grid gap-1 col-5 mx-auto">
    <%= f.submit "新規登録",class: "btn btn-success btn-lg" %>
  </div>
<% end %>


</div>
<br>
<div class="container col-lg-7">
  <h3><div class="d-inline mt-5 px-3 bg-light text-dark">既に登録済みな方</div></h3>
</div>
<br>
<div class="container col-lg-6">
  <col>
  <a href="/customers/sign_in">こちら</a>　からログインしてください。
  </col>
</div>