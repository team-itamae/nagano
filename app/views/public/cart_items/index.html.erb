<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
      <h4 class = "col-md-2 bg-light text-center my-4 ">ショッピングカート</h4>
<div class = "col-md-7 text-right">
<%= link_to "カートを空にする" ,cart_items_destroy_all_path(@cart_items), method: :delete %>

 <table class="table">
    <thead class="thead-light">
       <th>商品名</th>
       <th>単価(税込)</th>
       <th>数量</th>
       <th>小計</th>
    </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
   <tr>
    <td>
      <% if cart_item.image.attached? %>
       <%= image_tag cart_item.image, size: "200x200" %>
      <% else %>
       <%= image_tag 'no_image.jpeg', size: "200x200" %>
      <% end %>
      <%= cart_item.item.name %>
    </td>
    <td><%= cart_item.item.add_tax_price %></td>
    <td><%= cart_item.quantity %></td>
    <td><%= cart_item.subtotal %></td>
    <% @cart_item_price +=  cart_item.subtotal %>
    <td><%= link_to "削除する" ,cart_items_path(cart_item.id), method: :delete %></td>
   </tr>
  <% end %>
  </tbody>



  <tbody>
    <%= link_to "買い物を続ける", items_path %>

    <p>合計金額<%= @cart_item_price %></p>
    <%= link_to "情報入力に進む", orders_new_path %>
  </tbody>
</table>