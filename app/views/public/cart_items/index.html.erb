<div class = "container px-5 px-sm-0">

    <div class = "row mb-3">
      <div class = "col">
        <h4 class = "mb-3"><span class = "bg-headline px-2">ショッピングカート</span></h4>

      </div>
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger btn-lg" %>
    </div>

    <div class = "row mb-3">
      <div class = "col">

        <table class = "table table-bordered">
          <thead class = "table-active">
            <tr>
              <!--<th colspan = "2">商品名</th>-->
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @total =0 %>
            <% @cart_items.each do |cart_item| %>
               <tr>
                <td class = "align-middle">
                  <% if cart_item.item.image.attached? %>
                    <%= image_tag cart_item.item.image, size: "150x100", class: "img-fluid" %>
                  <% else %>
                    <%= image_tag "no_image.jpeg" %>
                  <% end %>
                  <%= cart_item.item.name %>
                  </td>
                <td class = "align-middle text-right"><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
                <td class = "align-middle text-center">
                  <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                    <%= f.select :quantity, *[1..10] %>
                    <%= f.submit "変更", class: "btn btn-success" %>
                  <% end %>
                <td class = "align-middle text-right"><%= cart_item.subtotal.to_s(:delimited) %></td>
                <% @total += cart_item.subtotal %>
                <td class = "align-middle text-center"><%= link_to "削除する",cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>

        </table>
      </div>
    </div>


      <div class = "col-md-3">
        <table class = "table table-bordered">
          <tbody>
            <tr>
              <% @total = @cart_items.inject(0) { |sum, item| sum + item.subtotal } %>
              <th class = "table-active">合計金額</th>
              <td class = "text-right"><strong><%= @total.to_s(:delimited) %></strong></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="offset-md-5 mt-3">
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary rounded-pill" %>
        <% if @cart_items.any? %>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success rounded-pill" %>
        <% end %>
    </div>
</div>
