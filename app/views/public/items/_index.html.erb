 <div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">

    <% items.each do |item| %>
       <div class="col">
          <ul>
            <%= link_to "/items/#{item.id}" do %>

            <% if item.image.attached? %>
              <%= image_tag item.image %>
            <% else %>
              <%= image_tag "no_image.jpg" %>
            <% end %>

            <% end %>

          </ul>
          <ul><%= item.name %></ul>
          <ul><%= item.price.to_s(:delimited) %></ul>
       </div>
    <% end %>

 </div>
</div>

