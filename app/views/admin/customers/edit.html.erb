<div class='container'>
  <div class'row'>
    <div class="d-inline p-3 mb-2 bg-light text-dark font-weight-bold">
      <h3><%= @customer.name_sei + @customer.name_mei %>さんの会員情報編集</h3>
    </div>

    <div class='col-md-9 mx-auto'>
      <table class='table table-borderless'>
        <tbody>
          <%= form_with model: @customer,url: admin_customer_path, method: "patch" do |f| %>
          <tr>
            <td>会員</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :name_sei %></td>
            <td><%= f.text_field :name_mei %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :kana_sei %></td>
            <td><%= f.text_field :kana_mei %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :post_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.telephone_field :phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, false %>有効
              <%= f.radio_button :is_deleted, true %>退会
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

        <div class="form-group d-grid gap-1 col-5 mx-auto">
          <%= f.submit '保存を変更', class: 'btn btn-success btn-lg' %>
        </div>

    </div>
  </div>
</div>